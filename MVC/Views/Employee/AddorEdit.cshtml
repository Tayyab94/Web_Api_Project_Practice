@model MVC.Models.Employee
@{
    ViewBag.Title = "AddorEdit";
}

<h2>AddorEdit</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(s => s.EmployeeId)

        <div class="form-group">
            @Html.LabelFor(s => s.Name)
            @Html.EditorFor(s => s.Name,"", new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Age)
            @Html.EditorFor(s => s.Age,"", new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Age)
        </div>

        <div class="form-group">
            @Html.LabelFor(s => s.Position)
            @Html.EditorFor(s => s.Position,"",new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Position)
        </div>


        <div class="form-group">
            @Html.LabelFor(s => s.Salary)
            @Html.EditorFor(s => s.Salary,"",new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Salary)
        </div>

        <div class="form-group">
            <input type="submit" value="Send" class="btn btn-primary" />
            <input type="reset" class="btn btn-danger" value="cANCEL" />
        </div>
    }
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
    }